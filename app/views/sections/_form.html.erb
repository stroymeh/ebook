<%= simple_form_for [@book, @chapter, @section], :html => { :class => 'section-form' } do |f| %>
  <%= f.input :title, :label => false, :autofocus => true,
              :input_html => { :class => 'title js-focused-input' },
              :wrapper_html => { :class => 'title-wrapper' },
              :placeholder => 'Название параграфа' %>

  <%= f.input :text, :label => false,
              :wrapper_html => { :class => 'text-wrapper' },
              :placeholder => 'Содержание параграфа' %>

  <div class="actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-blue' %>
    <%= link_to 'Отмена', book_chapter_path(@book, @chapter), :class => 'btn btn-gray' %>
  </div>
<% end %>
